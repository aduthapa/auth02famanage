<!-- views/home.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Auth0 MFA Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <div class="jumbotron text-center">
      <h1 class="display-4">Auth0 MFA Management Portal</h1>
      <p class="lead">Manage your multi-factor authentication methods securely</p>
      <hr class="my-4">
      
      <% if (isAuthenticated) { %>
        <p>Welcome back, <%= user.name %>!</p>
        <a class="btn btn-primary btn-lg" href="/profile" role="button">Manage MFA Methods</a>
        <a class="btn btn-danger btn-lg" href="/logout" role="button">Logout</a>
      <% } else { %>
        <p>Please login to manage your MFA methods</p>
        <a class="btn btn-primary btn-lg" href="/login" role="button">Login</a>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>