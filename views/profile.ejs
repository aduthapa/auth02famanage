<!-- views/profile.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MFA Management | Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .mfa-card {
      margin-bottom: 20px;
    }
    .mfa-method-icon {
      font-size: 24px;
      margin-right: 10px;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <div class="card">
          <div class="card-header bg-primary text-white">
            <h2>My Profile</h2>
          </div>
          <div class="card-body">
            <div class="mb-4">
              <h3>User Information</h3>
              <p><strong>Name:</strong> <%= user.name %></p>
              <p><strong>Email:</strong> <%= user.email %></p>
            </div>

            <hr>

            <div class="mb-4">
              <h3>Your MFA Methods</h3>
              <% if (mfaEnrollments && mfaEnrollments.length > 0) { %>
                <div class="row">
                  <% mfaEnrollments.forEach(enrollment => { %>
                    <div class="col-md-6">
                      <div class="card mfa-card">
                        <div class="card-body">
                          <h5 class="card-title">
                            <% if (enrollment.type === 'sms') { %>
                              <i class="mfa-method-icon">üì±</i> SMS
                            <% } else if (enrollment.type === 'email') { %>
                              <i class="mfa-method-icon">‚úâÔ∏è</i> Email
                            <% } else if (enrollment.type === 'push-notification') { %>
                              <i class="mfa-method-icon">üîî</i> Guardian App
                            <% } else if (enrollment.type === 'otp') { %>
                              <i class="mfa-method-icon">üîë</i> Google Authenticator
                            <% } else if (enrollment.type.includes('webauthn')) { %>
                              <i class="mfa-method-icon">üîê</i> Security Key
                            <% } else { %>
                              <i class="mfa-method-icon">üõ°Ô∏è</i> <%= enrollment.type %>
                            <% } %>
                          </h5>
                          <p class="card-text">
                            <% if (enrollment.name) { %>
                              <strong>Name:</strong> <%= enrollment.name %><br>
                            <% } %>
                            <strong>Added:</strong> <%= new Date(enrollment.created_at).toLocaleDateString() %>
                          </p>
                          <form action="/delete-mfa/<%= enrollment.id %>" method="post">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to remove this MFA method?')">
                              Remove
                            </button>
                          </form>
                        </div>
                      </div>
                    </div>
                  <% }); %>
                </div>
              <% } else { %>
                <div class="alert alert-warning">
                  You don't have any MFA methods set up yet. Add one below to increase your account security.
                </div>
              <% } %>
            </div>

            <hr>

            <div>
              <h3>Add New MFA Method</h3>
              <p>Select a method below to add it to your account:</p>
              
              <div class="row">
                <% availableMethods.forEach(method => { %>
                  <div class="col-md-4 mb-3">
                    <div class="card h-100">
                      <div class="card-body text-center">
                        <h5 class="card-title">
                          <% if (method.id === 'sms') { %>
                            <i class="mfa-method-icon">üì±</i>
                          <% } else if (method.id === 'email') { %>
                            <i class="mfa-method-icon">‚úâÔ∏è</i>
                          <% } else if (method.id === 'push-notification') { %>
                            <i class="mfa-method-icon">üîî</i>
                          <% } else if (method.id === 'otp') { %>
                            <i class="mfa-method-icon">üîë</i>
                          <% } else if (method.id.includes('webauthn')) { %>
                            <i class="mfa-method-icon">üîê</i>
                          <% } %>
                          <%= method.name %>
                        </h5>
                        <form action="/enroll-mfa" method="post">
                          <input type="hidden" name="method" value="<%= method.id %>">
                          <button type="submit" class="btn btn-primary">Add</button>
                        </form>
                      </div>
                    </div>
                  </div>
                <% }); %>
              </div>
            </div>
          </div>
          <div class="card-footer">
            <a href="/" class="btn btn-secondary">Back to Home</a>
            <a href="/logout" class="btn btn-danger float-end">Logout</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>