<!-- views/change-password.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Change Password | Account Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .account-header {
      background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
      color: white;
      padding: 2rem 0;
    }
    .nav-pills .nav-link {
      border-radius: 50px;
      margin-right: 0.5rem;
      margin-bottom: 0.5rem;
    }
    .nav-pills .nav-link.active {
      background-color: #667eea;
    }
    .card {
      border: none;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      margin-bottom: 1.5rem;
    }
    .password-info {
      background: #f8f9fa;
      border-left: 4px solid #ffc107;
      padding: 1rem;
      margin-bottom: 1.5rem;
    }
    .password-tips {
      background: #e3f2fd;
      border-left: 4px solid #2196f3;
      padding: 1rem;
      margin-bottom: 1.5rem;
    }
    .btn-warning {
      background-color: #ffc107;
      border-color: #ffc107;
    }
    .security-icon {
      font-size: 4rem;
      color: #ffc107;
      margin-bottom: 1rem;
    }
  </style>
</head>
<body>
  <!-- Header -->
  <div class="account-header">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-12 text-center">
          <h1><i class="bi bi-key me-2"></i>Change Password</h1>
          <p class="mb-0">Update your account password for enhanced security</p>
        </div>
      </div>
    </div>
  </div>

  <div class="container mt-4">
    <!-- Alert Messages -->
    <% if (typeof success !== 'undefined' && success) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i><%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-circle me-2"></i><%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <!-- Navigation Pills -->
    <ul class="nav nav-pills justify-content-center mb-4">
      <li class="nav-item">
        <a class="nav-link" href="/account">
          <i class="bi bi-house-door me-2"></i>Overview
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/profile">
          <i class="bi bi-person me-2"></i>Profile
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/security">
          <i class="bi bi-shield-check me-2"></i>Security
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="/change-password">
          <i class="bi bi-key me-2"></i>Password
        </a>
      </li>
    </ul>

    <div class="row justify-content-center">
      <div class="col-md-8">
        <!-- Password Change Information -->
        <div class="password-info">
          <div class="row align-items-center">
            <div class="col-md-2 text-center">
              <i class="bi bi-info-circle" style="font-size: 2rem; color: #ffc107;"></i>
            </div>
            <div class="col-md-10">
              <h6 class="mb-1">How Password Reset Works</h6>
              <p class="mb-0">For security reasons, we'll send a password reset link to your registered email address. Click the link to set a new password securely.</p>
            </div>
          </div>
        </div>

        <!-- Main Password Change Card -->
        <div class="card">
          <div class="card-header">
            <h5><i class="bi bi-shield-lock me-2"></i>Password Security</h5>
          </div>
          <div class="card-body text-center">
            <div class="security-icon">
              <i class="bi bi-key"></i>
            </div>
            
            <h4>Request Password Change</h4>
            <p class="text-muted mb-4">We'll send a secure password reset link to <strong><%= user.email %></strong></p>
            
            <form action="/change-password" method="POST">
              <button type="submit" class="btn btn-warning btn-lg mb-3">
                <i class="bi bi-envelope me-2"></i>Send Password Reset Email
              </button>
            </form>
            
            <p class="small text-muted">
              The reset link will be valid for 24 hours and can only be used once.
            </p>
          </div>
        </div>

        <!-- Password Security Tips -->
        <div class="password-tips">
          <h6><i class="bi bi-lightbulb me-2"></i>Password Security Tips</h6>
          <div class="row">
            <div class="col-md-6">
              <ul class="list-unstyled mb-0">
                <li class="mb-2"><i class="bi bi-check text-success me-2"></i>Use at least 12 characters</li>
                <li class="mb-2"><i class="bi bi-check text-success me-2"></i>Include uppercase and lowercase letters</li>
                <li class="mb-2"><i class="bi bi-check text-success me-2"></i>Add numbers and special characters</li>
              </ul>
            </div>
            <div class="col-md-6">
              <ul class="list-unstyled mb-0">
                <li class="mb-2"><i class="bi bi-check text-success me-2"></i>Avoid common words or patterns</li>
                <li class="mb-2"><i class="bi bi-check text-success me-2"></i>Don't reuse old passwords</li>
                <li class="mb-2"><i class="bi bi-check text-success me-2"></i>Consider using a password manager</li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Current Account Information -->
        <div class="card">
          <div class="card-header">
            <h5><i class="bi bi-person-check me-2"></i>Account Information</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <label class="form-label fw-bold">Email Address</label>
                  <div class="d-flex align-items-center">
                    <span><%= user.email %></span>
                    <% if (user.email_verified) { %>
                      <span class="badge bg-success ms-2">
                        <i class="bi bi-check-circle me-1"></i>Verified
                      </span>
                    <% } else { %>
                      <span class="badge bg-warning ms-2">
                        <i class="bi bi-exclamation-triangle me-1"></i>Unverified
                      </span>
                    <% } %>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="mb-3">
                  <label class="form-label fw-bold">Last Password Update</label>
                  <div>
                    <% if (user.updated_at) { %>
                      <%= new Date(user.updated_at).toLocaleDateString('en-US', { 
                        year: 'numeric', 
                        month: 'long', 
                        day: 'numeric' 
                      }) %>
                    <% } else { %>
                      Not available
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
            
            <% if (!user.email_verified) { %>
              <div class="alert alert-warning mt-3">
                <i class="bi bi-exclamation-triangle me-2"></i>
                <strong>Note:</strong> Your email address is not verified. Please verify your email to ensure you can receive the password reset link.
              </div>
            <% } %>
          </div>
        </div>

        <!-- Additional Security Options -->
        <div class="card">
          <div class="card-header">
            <h5><i class="bi bi-shield-plus me-2"></i>Additional Security</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6 mb-3">
                <div class="d-flex align-items-center">
                  <i class="bi bi-shield-check text-success me-3" style="font-size: 1.5rem;"></i>
                  <div>
                    <h6 class="mb-0">Two-Factor Authentication</h6>
                    <small class="text-muted">Add an extra layer of security</small>
                  </div>
                </div>
                <div class="mt-2">
                  <a href="/security" class="btn btn-outline-success btn-sm">
                    <i class="bi bi-gear me-1"></i>Manage 2FA
                  </a>
                </div>
              </div>
              
              <div class="col-md-6 mb-3">
                <div class="d-flex align-items-center">
                  <i class="bi bi-person-gear text-primary me-3" style="font-size: 1.5rem;"></i>
                  <div>
                    <h6 class="mb-0">Profile Settings</h6>
                    <small class="text-muted">Update your account information</small>
                  </div>
                </div>
                <div class="mt-2">
                  <a href="/profile" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-pencil me-1"></i>Edit Profile
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Help Section -->
        <div class="card">
          <div class="card-header">
            <h5><i class="bi bi-question-circle me-2"></i>Need Help?</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <h6>Can't access your email?</h6>
                <p class="small text-muted mb-2">If you can't access the email address associated with your account, you'll need to contact support for assistance.</p>
              </div>
              <div class="col-md-6">
                <h6>Forgot your email address?</h6>
                <p class="small text-muted mb-2">Your current email address is displayed above. If this is incorrect, please contact support.</p>
              </div>
            </div>
            <div class="alert alert-info mt-3">
              <i class="bi bi-info-circle me-2"></i>
              <strong>Security Notice:</strong> If you didn't request this password change, please review your account security and consider enabling two-factor authentication.
            </div>
          </div>
        </div>

        <!-- Back Button -->
        <div class="text-center mt-4 mb-5">
          <a href="/account" class="btn btn-outline-secondary me-2">
            <i class="bi bi-arrow-left me-2"></i>Back to Account
          </a>
          <a href="/security" class="btn btn-outline-success">
            <i class="bi bi-shield-check me-2"></i>Security Settings
          </a>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Add confirmation dialog for password reset
    document.querySelector('form').addEventListener('submit', function(e) {
      if (!confirm('Are you sure you want to request a password reset? A reset link will be sent to your email address.')) {
        e.preventDefault();
      }
    });

    // Auto-dismiss success alerts after 10 seconds
    document.addEventListener('DOMContentLoaded', function() {
      const successAlert = document.querySelector('.alert-success');
      if (successAlert) {
        setTimeout(function() {
          const bsAlert = new bootstrap.Alert(successAlert);
          bsAlert.close();
        }, 10000);
      }
    });
  </script>
</body>
</html>
